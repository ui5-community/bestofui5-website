<mvc:View
  xmlns:commons="sap.suite.ui.commons"
  xmlns:core="sap.ui.core"
  controllerName="org.openui5.bestofui5.controller.Contributors"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
  height="100%"
>
  <Button text="Expand Details" press=".onExpandDetails" />
  <FlexBox
    id="contributorsFlexBox"
    width="{= ${device>/system/phone} === true ? '' : '1024px' }"
    height="100%"
    direction="{contributorsView>/direction}"
    alignItems="Start"
    wrap="{contributorsView>/wrap}"
    justifyContent="Start"
    items="{path: 'contributors>/', sorter : { path : 'contributions',descending: 'false' }}"
  >
    <items>
      <FlexBox>
        <VBox alignItems="Center">
          <Avatar src="{contributors>avatar_url}" displaySize="XL" showBorder="true" press="onPress" />
          <Text text="{contributors>name}" class="sapUiSmallMarginTop" />
        </VBox>
        <VBox class="contributorsLinks sapMText ">
          <Text text="Contributions: {contributors>contributions}" class="sapUiSmallMarginTop" visible="{= ${contributorsView>/direction} === 'Column'}" />
          <core:HTML content="{contributors>packagesFrontend}" visible="{= ${contributorsView>/direction} === 'Column'}" />
        </VBox>
      </FlexBox>
    </items>
  </FlexBox>
</mvc:View>
