<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <ViewSettingsDialog id="linkHeaderViewSettingsDialog" confirm="handleConfirm" sortDescending="{settings>/sortOrderDecending}">
    <sortItems>
      <ViewSettingsItem key="downloadsCurrentFortnight" text="{i18n>all_packages_view_select_downloadsCurrentFortnight}" />
      <ViewSettingsItem key="downloadsCurrentMonth" text="{i18n>all_packages_view_select_downloadsCurrentMonth}" />
      <ViewSettingsItem key="downloads365" text="{i18n>all_packages_view_select_downloads365}" />
      <ViewSettingsItem key="vscodeInstalls" text="{i18n>all_packages_view_select_vscodeInstalls}" />
      <ViewSettingsItem key="updatedAt" text="{i18n>all_packages_view_select_updatedAt}" />
      <ViewSettingsItem key="createdAt" text="{i18n>all_packages_view_select_createdAt}" />
      <ViewSettingsItem key="addedToBoUI5" text="{i18n>all_packages_view_select_addedToBoUI5}" />
    </sortItems>
    <filterItems>
      <ViewSettingsFilterItem text="Types" key="type" items="{path: 'data>/tags/', sorter :{ path : 'count',descending: 'false' }, filters : { path : 'type', operator : 'EQ', value1 : 'type'}}">
        <items>
          <ViewSettingsItem text="{data>name} ({data>count})" key="{data>name};{data>type}" />
        </items>
      </ViewSettingsFilterItem>
      <ViewSettingsFilterItem text="Tags" key="tag" items="{path: 'data>/tags/', sorter :{ path : 'count',descending: 'false' }, filters : { path : 'type', operator : 'EQ', value1 : 'tag'}}">
        <items>
          <ViewSettingsItem text="{data>name} ({data>count})" key="{data>name};{data>type}" />
        </items>
      </ViewSettingsFilterItem>
    </filterItems>
  </ViewSettingsDialog>
</core:FragmentDefinition>
