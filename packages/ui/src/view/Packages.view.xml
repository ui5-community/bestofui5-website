<mvc:View controllerName="org.openui5.ui5community.controller.Packages"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:ui5cc="org.openui5.ui5community.control"
    xmlns:core="sap.ui.core">
                <List id="_IDGenList1" headerText="Packages" mode="None" items="{path: 'data>/packages/'}" width="{= ${device>/system/phone} === true ? '' : '800px' }">
                    <CustomListItem id="_IDGenCustomListItem1" type="Navigation" press="onPress">
                        <ui5cc:PackageListItemContent name="{data>name}" githublink="{data>githublink}" npmlink="{data>npmlink}" description="{
                                        parts: ['data>description', 'settings>/search'],
                                        formatter: '.formatter.formatHighlight'
                                      }" type="{data>type}" stars="{data>stars}" forks="{data>forks}"
                                      updatedAt="{data>updatedAt}" createdAt="{data>createdAt}" downloads="{data>downloads}"
                                      />
                    </CustomListItem>
                </List>
</mvc:View>
